{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"],
      "@appTypes/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": ["src"],
  "files": ["custom.d.ts"]
}
